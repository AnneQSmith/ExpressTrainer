doctype html

html(lang="en")
	head
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		meta(charset="utf-8")
		title pockettrainer: Can Anne ever learn anything?  
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="")
		meta(name="author", content="")
		script(src="http://code.jquery.com/jquery-1.9.1.min.js")
		link(href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.min.css", rel="stylesheet")
		script(src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js")
		link(rel='stylesheet', href='/stylesheets/home.css')
	body
		div(class="bg")

		div(class="container-narrow")

			div(class="masthead")
				ul(class="nav nav-pills pull-right")
					li(class="active")
						a(href="/Coach") Login Page				

				h3(class="muted") pocket trainer

			div(class="jumbotron")
				h3 #{coachname}, welcome to your coaching page!

			hr

			div(class="row-fluid marketing")
				div(class="span6")
					img(class="thumbnail", src="/images/serenity-connor.jpg")
				div(class="span6")
					h4 Athletes:
						each athlete in athletes 
							li
								h5 #{athlete.spokenName}

					form(name='getworkouts',method='post', action='/see_workouts')
						label(for="workoutwho") Who?
						select(id="workoutwho", name="workoutwho")
							each athlete,i  in athletes
								option(value=athlete.athleteId) #{athlete.spokenName}

						button(type="submit",  action='/see_workouts') See Workouts!
				
			
			hr

			div(class="footer")
				p Â© pockettrainer 2014

			