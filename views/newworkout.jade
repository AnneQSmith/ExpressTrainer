doctype html

html(lang="en")
	head
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		meta(charset="utf-8")
		title pockettrainer: Workouts 
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="")
		meta(name="author", content="")
		script(src="http://code.jquery.com/jquery-1.9.1.min.js")
		link(href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.min.css", rel="stylesheet")
		script(src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js")
		link(rel='stylesheet', href='/stylesheets/home.css')
	body
		div(class="bg")

		div(class="container-narrow")

			div(class="masthead")
				ul(class="nav nav-pills pull-right")
					li(class="active")
						a(href="/Coach") Login Page				

				h3(class="muted") pocket trainer

			div(class="jumbotron")
				h3 Make the Magic Happen

			hr

			div(class="row-fluid marketing")
				div(class="span6")
					h4 Current Workouts:
						br
						ul
							each workout in workoutlist
								li
									a(href="/description/#{workout.workoutId}") #{workout.workoutName}

				div(class="span6")

					h4 Create a New Workout:
					
					form(name="addworkout",method="post",action="/addworkout")
						input#inputWorkoutName(type="text", placeholder="Name", name="workoutname")
						input#inputWorkoutTheme(type="text", placeholder="Theme", name="workouttheme")
						input#inputWorkoutDescription(type="text",placeholder="Description", name="workoutdescription")
						input#inputTargetTime(type="integer", placeholder="Time in minutes","name=targettime")
						label(for="workoutexercises") Exercise: 
						select(id="workoutexercises", name="workoutexercises")
							each exercise in exerciselist
								option(value=exercise.exerciseId) #{exercise.exerciseName}
						input#inputExerciseReps(type="integer", placeholder="Reps",name="exercisereps")
						button#btnSubmit(type="submit") submit
				
			
			hr

			div(class="footer")
