doctype html

html(lang="en")
	head
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		meta(charset="utf-8")
		title pockettrainer
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="")
		meta(name="author", content="")
		script(src="http://code.jquery.com/jquery-1.9.1.min.js")
		link(href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.min.css", rel="stylesheet")
		script(src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js")
		script(src="/javascripts/exerciseprogress.js")
		link(rel='stylesheet', href='/stylesheets/home.css')
	body
		div(class="bg")

		div(class="container-narrow")

			div(class="masthead")
				ul(class="nav nav-pills pull-right")
					li(class="active")
						a(href="/") Login Page				

				h3(class="muted") pocket trainer

			hr

			div(class="jumbotron")
				h3 #{aname}, Check out your workouts
					each workout,i in workouts
						h6 #{wd[i]}: #{workout.coachNotes}

			div(class="jumbotron")
				h4 Track Workout Progress

				form(name="trackworkout", method="post", action="/logaworkout/#{aId}/#{workouts[0].workoutId}")
					each exerciseName,i in exerciseNames
						label  #{exerciseName}  (#{exerciseReps[i]})
						input(class="ExerciseProgress", id="ItemInput#{i}",type="integer", placeholder = "#{exerciseReps[i]}", name="#{exerciseName}|#{exerciseIds[i]}", currentvalue=0)
						button(class="ToggleProgress", id="ItemIncrement#{i}") +1
					label Enter comments and submit when you are done
					input#ItemInput(type="text", placeholder = "editorial comments", name = "workoutComments")
					button#btnSubmit(type="submit") submit			

			hr

			div(class="footer")
				p Â© pockettrainer 2014

			