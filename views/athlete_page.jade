doctype html

html(lang="en")
	head
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		meta(charset="utf-8")
		title pockettrainer
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="")
		meta(name="author", content="")
		script(src="http://code.jquery.com/jquery-1.9.1.min.js")
		link(href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.min.css", rel="stylesheet")
		script(src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js")
		link(rel='stylesheet', href='/stylesheets/home.css')
	body
		div(class="bg")

		div(class="container-narrow")

			div(class="jumbotron")
				h3 #{current_athlete}, welcome to your training page!
				p(class="lead") #{tn} / Coach #{cn} says let's get psyched!

			hr

			div(class="row-fluid marketing")
				div(class="span6")
					img(class="thumbnail", src="/images/serenity-connor.jpg")
				div(class="span6")
					h5 Goal: #{goal} 
					h5 #{gd}
					h5 Bouldering Par: V#{bp}
					h5 Bouldering Best: V#{bb}
					h5 Sport Route Par:  #{sp}
					h5 Sport Route Best: #{sb}
					h5 AthleteId: #{athleteId}


					form(name='getworkouts',method='post', action='/see_aworkouts/#{athleteId}/#{current_athlete}')

						label(for="workoutwhen") When? 
						select(id="workoutwhen", name="workouttime")
							option(value='today') today
							option(value='future') future
							option(value='past') past
					
						button(type="submit",  action='/see_aworkouts/#{athleteId}/#{current_athlete}') See Workouts!
				
			hr

			div(class="footer")
				p Â© pockettrainer 2014

			